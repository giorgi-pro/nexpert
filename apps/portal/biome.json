{
  "extends": ["@repo/env/biome"],
  "formatter": {
    "ignore": [
      "**/*.json",
      "**/dist/**",
      "**/.next/**",
      "**/storybook-static/**",
      "**/coverage-storybook/**",
      "**/scripts/**",
      "**/google/"
    ]
  },
  "linter": {
    "rules": {
      "recommended": false
    },
    "ignore": [
      ".lintstagedrc.js",
      "dist/**",
      "node_modules/**",
      "**/*.json",
      "coverage",
      "vitest.config.ts",
      "**/mockServiceWorker.js",
      "vitest.config.unit.ts",
      "**/*.test.tsx.snap",
      "**/dist/**",
      "**/.next/**",
      "**/storybook-static/**",
      "**/coverage-storybook/**",
      "**/scripts/**",
      "**/playwright-report/**",
      "**/postcss.config.js",
      "**/tailwind.config.js",
      "**/babel.config.js",
      "**/next.config.js",
      "**/graphql.config.js",
      "packages/alpheya-configs/alpheya-tailwind-config/**/*.js"
    ]
  },
  "javascript": {
    "globals": ["React"]
  }
}
